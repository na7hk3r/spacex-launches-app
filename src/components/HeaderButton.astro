---
interface Props {
    href: string;
    tooltip?: string;
}

const { href, tooltip } = Astro.props;
---

<div class="group/tooltip relative">
    <a 
    href={href}
    class="flex items-center gap-2 px-5 py-2.5 bg-gray-800 text-white rounded-lg hover:bg-gray-700 transition-all duration-300 hover:shadow-lg hover:shadow-blue-500/20 hover:scale-105 group">
        <span class="text-blue-400 group-hover:text-blue-300 transition-colors">
            <slot name="before" />
        </span>
        <span class="font-medium">
            <slot />
        </span>
        <slot name="after" />
    </a>
    
    {tooltip && (
        <div class="absolute left-1/2 -translate-x-1/2 bottom-full mb-2 w-max max-w-[180px] sm:max-w-xs opacity-0 group-hover/tooltip:opacity-100 transition-opacity duration-300 pointer-events-none z-50">
            <div class="px-3 py-2 text-xs font-medium text-white bg-gray-900 rounded-lg shadow-lg line-clamp-2">
                {tooltip}
                <div class="absolute left-1/2 -translate-x-1/2 top-full w-2 h-2 rotate-45 bg-gray-900"></div>
            </div>
        </div>
    )}
</div>